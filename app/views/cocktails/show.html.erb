<div class="cocktail_show" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6), rgba(0,36,61,0.6) 50%), url('<%= cl_image_path @cocktail.photo %>');">
    <h1><%= @cocktail.name %></h1>

</div>


  <div class="container text-center">
      <h2>Ingredients</h2>
      <ul class="list-unstyled">
        <% @cocktail.doses.each do |dose| %>
        <li>
            <%= dose.description %> - <%= dose.ingredient.name %>
              <%= link_to(dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }) do %>
              <i class="fa fa-trash-o" aria-hidden="true"></i>
          <% end %>
        <% end %>
        </li>
      </ul>
    <%= link_to "Add dosage", new_cocktail_dose_path(@cocktail), class: 'btn btn-primary' %>
    <%= link_to "Back", cocktails_path, class: 'btn btn-primary'%>
  </div>







